        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="CommonTitleBarBackgroundStyle">
        <item name="android:background">@color/common_title_bg_color</item>
    </style>
    
    <style name="CommonTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CommonTitleBarBackgroundStyle</item>
    </style>
    
    <!-- CharacterDetailActivity -->
    <style name="CharacterDetailCustomWindowTitleBackground">
        <item name="android:background">@drawable/cd_title_bar_bg</item>
    </style>

    <style name="CharacterDetailTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CharacterDetailCustomWindowTitleBackground</item>
    </style>

    <!-- Comment Activity -->
    <style name="CommentCustomWindowTitleBackground">
        <item name="android:background">@drawable/cd_title_bar_bg</item>
    </style>

    <style name="CommentTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CommentCustomWindowTitleBackground</item>
    </style>
    
