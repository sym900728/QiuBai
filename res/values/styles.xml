    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>
    
    <!-- Common -->
    <style name="CommonActionDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/common_action_bar_panel_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@color/common_dialog_bg_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="CommonProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
