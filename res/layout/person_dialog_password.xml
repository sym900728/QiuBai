<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@drawable/common_white_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="修改密码"
            android:textColor="@color/cd_dialog_font_tv_title_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
		
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="原密码："
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/common_black_color"
            />
        
        <EditText
            android:id="@+id/person_dialog_password_origin_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:hint="6~20位字符的密码"
            android:textSize="14sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/person_dialog_password_origin_iv_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/common_text_edit_delete"
            android:visibility="invisible" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@drawable/common_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
		
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="新密码："
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/common_black_color"
            />
        
        <EditText
            android:id="@+id/person_dialog_password_new_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_centerVertical="true"
            android:hint="6~20位字符的密码"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/person_dialog_password_new_iv_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/common_text_edit_delete"
            android:visibility="invisible" />
    </RelativeLayout>

    
    <RelativeLayout 
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@drawable/common_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
		
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="确认密码："
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/common_black_color"
            />
        
        <EditText
            android:id="@+id/person_dialog_password_repeat_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_centerVertical="true"
            android:hint="6~20位字符的密码"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/person_dialog_password_repeat_iv_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/common_text_edit_delete"
            android:visibility="invisible" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/person_dialog_password_rel_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_layout_press_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="取消"
                android:textColor="@color/person_dialog_font_tv_cancel_color"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/person_dialog_password_rel_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_layout_press_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认"
                android:textColor="@color/person_dialog_font_tv_confirm_color"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>