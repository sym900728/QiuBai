<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_white_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                	android:layout_marginTop="20dp" 
                    android:layout_alignParentLeft="true" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/login_account_username_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    >

                    <EditText
                        android:id="@+id/login_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="邮箱"
                        android:singleLine="true"
                        android:textColorHint="@color/login_tv_hint_color"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress"
                        android:maxLength="100"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                	android:layout_marginTop="20dp" 
                    android:layout_alignParentRight="true" >

                    <ImageView
                        android:id="@+id/login_user_email_iv_cancel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/common_text_edit_delete"
                        android:visibility="invisible"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="40dp"
                android:background="@drawable/comment_listview_item_divider" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="20dp"
                	android:layout_marginTop="15dp"
                    android:layout_alignParentLeft="true" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/login_account_pwd_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginBottom="5dp"
                    >

                    <EditText
                        android:id="@+id/login_user_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="密码"
                        android:password="true"
                        android:singleLine="true"
                        android:textColorHint="@color/login_tv_hint_color"
                        android:maxLength="20"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout 
                    android:id="@+id/login_rel_forget_password"
                    android:layout_width="65dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="15dp"
                    android:layout_alignParentRight="true"
                    >
                    
                    <TextView 
                        android:id="@+id/login_tv_forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="忘记密码"
                        android:layout_centerInParent="true"
                        android:textColor="@color/login_tv_forget_password_color"
                    	android:textSize="13sp"
                        />
                    
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/login_user_password_cancel_rel"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="20dp"
                	android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@id/login_rel_forget_password"
                    >

                    <ImageView
                        android:id="@+id/login_user_password_iv_cancel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:visibility="invisible"
                        android:src="@drawable/common_text_edit_delete" />
                </RelativeLayout>
                
                
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_login_lin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/common_layout_red_press_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="登  录"
                    android:textColor="@color/login_tv_login_color"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还可以选择以下方式登录"
                android:textColor="@color/login_tv_other_way_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/common_white_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/login_account_sina"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/login_account_sina_press_bg"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="新浪微博登录"
                            android:textColor="@color/login_tv_other_way_login_color"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/login_account_qq"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/login_account_qq_press_bg"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="QQ账号登录"
                            android:textColor="@color/login_tv_other_way_login_color"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/common_divider" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login_layout_to_register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/common_layout_press_bg" >

                <TextView
                    android:id="@+id/login_tv_no_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="没有账号？"
                    android:textColor="@color/login_tv_no_account_color"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/login_tv_no_account"
                    android:text="注册账号"
                    android:textColor="@color/login_tv_register_color"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>