<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/main_viewpager_title_bg_color"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/main_viewpager_title_rel_picture"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/main_viewpager_title_tv_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="搞图"
            android:textColor="@color/common_grey_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/main_viewpager_title_iv_picture"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_viewpager_title_rel_joke"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/main_viewpager_title_tv_joke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="笑话"
            android:textColor="@color/common_grey_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/main_viewpager_title_iv_joke"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_viewpager_title_rel_novel"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/main_viewpager_title_tv_novel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="微说"
            android:textColor="@color/common_grey_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/main_viewpager_title_iv_novel"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_viewpager_title_rel_diy"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/main_viewpager_title_tv_diy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DIY"
            android:textColor="@color/common_grey_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/main_viewpager_title_iv_diy"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>