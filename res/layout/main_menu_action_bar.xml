<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_menu_action_weather_lin"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:background="@drawable/common_action_press_bg"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="45dp" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:src="@drawable/biz_main_menu_weather" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="45dp" >

            <TextView
                android:id="@+id/main_menu_action_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/cd_action_text_color"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_menu_action_setting_lin"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:background="@drawable/common_action_press_bg"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="45dp" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:src="@drawable/biz_main_menu_setting" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="45dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设置"
                android:textColor="@color/cd_action_text_color"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>